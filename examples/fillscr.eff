BYTE RTCLOCK=20, ; addr of sys timer
     SAVMSCL=88, ; lsb of screen addr
     SAVMSCH=89, ; msb

     I,J,TIME    ; declare variables
     CHAR KEY

CARD SCREEN

PROC BENCH()

  GRAPHICS(24)
  RTCLOCK=0

  SCREEN=SAVMSCL+256*SAVMSCH

  FOR I=0 TO 31
    DO
    FOR J=0 TO 239
      DO
      POKE(SCREEN+J,255)
    OD
    SCREEN==+240
  OD

  TIME=RTCLOCK

  GRAPHICS(0)
  PRINTF("%E %U JIFFIES",TIME)
  KEY=GETD(7)

RETURN
